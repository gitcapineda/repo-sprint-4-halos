@page
@model Tecnopress.App.SitioWeb.Pages_Proyecto.CreateModel
@{
}
<h1 class="display-4" align="center">Registrar Proyecto</h1>
&nbsp;
&nbsp;
<!-- Formulario de creación de un cliente (nombre, apellido, edad, genero)-->
<form method='post'>
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Atributo nombre -->
    <div class="form-group">
        <label asp-for="proyecto.nombreProyecto" class="control-label"></label>
        <input asp-for="proyecto.nombreProyecto" class="form-control" />
        <span asp-validation-for="proyecto.nombreProyecto" class="text-danger"></span>
    </div>

    <!-- Atributo apellido -->
    <div class="form-group">
        <label asp-for="proyecto.codigoProyecto" class="control-label"></label>
        <input asp-for="proyecto.codigoProyecto" class="form-control" />
        <span asp-validation-for="proyecto.codigoProyecto" class="text-danger"></span>
    </div>

    <!-- Atributo genero -->
    <div class="form-group">
        <label asp-for="proyecto.TiempoEjecucion" class="control-label"></label>
        <input asp-for="proyecto.TiempoEjecucion" class="form-control" />
        <span asp-validation-for="proyecto.TiempoEjecucion" class="text-danger"></span>
    </div>
     <!-- Atributo fechaejecucion -->
    <div class="form-group">
        <label asp-for="proyecto.FechaEjecucion" class="control-label"></label>
        <input asp-for="proyecto.FechaEjecucion" class="form-control" />
        <span asp-validation-for="proyecto.FechaEjecucion" class="text-danger"></span>
    </div>
 <!-- Atributo costo -->
    <div class="form-group">
        <label asp-for="proyecto.Costo" class="control-label"></label>
        <input asp-for="proyecto.Costo" class="form-control" />
        <span asp-validation-for="proyecto.Costo" class="text-danger"></span>
    </div>
     <!-- Atributo descripcion proyecto -->
    <div class="form-group">
        <label asp-for="proyecto.DescripcionProyecto" class="control-label"></label>
        <input asp-for="proyecto.DescripcionProyecto" class="form-control" />
        <span asp-validation-for="proyecto.DescripcionProyecto" class="text-danger"></span>
    </div>
     <!-- Atributo visitas -->
    <div class="form-group">
        <label asp-for="proyecto.Visitas" class="control-label"></label>
        <input asp-for="proyecto.Visitas" class="form-control" />
        <span asp-validation-for="proyecto.Visitas" class="text-danger"></span>
    </div>
    <!-- Atributo pais COMBOBOX PARA SELECCIONAR EL cliente -->
    <div class="form-group">
        <label asp-for="proyecto.cliente.nombre" class="control-label"></label>
        <select asp-for="proyecto.clienteId" class="form-control">
            @foreach (var cliente in Model.clientes)
            {
                <option value="@cliente.idCliente">@cliente.nombre</option>
            }
        </select>
        <span asp-validation-for="proyecto.cliente.nombre" class="text-danger"></span>
    </div>
<!-- Atributo pais COMBOBOX PARA SELECCIONAR EL cliente -->
    <div class="form-group">
        <label asp-for="proyecto.categoria.nombreCategoria" class="control-label"></label>
        <select asp-for="proyecto.categoriaId" class="form-control">
            @foreach (var categoria in Model.categorias)
            {
                <option value="@categoria.idCategoria">@categoria.nombreCategoria</option>
            }
        </select>
        <span asp-validation-for="proyecto.categoria.nombreCategoria" class="text-danger"></span>
    </div>

    <!-- Botón crear -->
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>

</form>